<?xml version="1.0" encoding="iso-8859-1"?>

<xform style="manual">
<table border="1" cellspacing="0" cellpadding="2">

 <tr>
  <th colspan="2" class="xform-title">
   <table border="0" cellspacing="0" cellpadding="0" width="100%">
    <tr>
     <th align="left" class="xform-title">
      Chart Properties
     </th>
     <td align="right" class="xform-close-button">
      <imgButton src="wcf/form/cancel.png" action="revert" label="Close" hide="true" handler="com.tonbeller.wcf.form.ButtonHandler"/>
     </td>
    </tr>
   </table>
  </th>
 </tr>

 <tr>
  <td>Chart Type</td>
  <td>
   <listBox1 type="string" modelReference="chartType">
	<listItem value="Area2D" label="Area 2D"/>
	<listItem value="MSColumn2D" label="Bar 2D"/>
	<listItem value="MSColumn3D" label="Bar 3D"/>
	<listItem value="Doughnut2D" label="Doughnut 2D"/>
	<listItem value="Funnel" label="Funnel"/>
	<listItem value="Line" label="Line"/>
	<listItem value="Pie2D" label="Pie 2D"/>
	<listItem value="Pie3D" label="Pie 3D"/>
	<listItem value="MSArea2D" label="Multi Series Area 2D"/>
	<listItem value="MSLine" label="Multi Series Line"/>
	<listItem value="StackedArea2D" label="Stacked Area 2D"/>
	<listItem value="StackedBar2D" label="Stacked Bar 2D"/>
	<listItem value="StackedColumn2D" label="Stacked Column 2D"/>
	<listItem value="StackedColumn3D" label="Stacked Column 3D"/>
	<listItem value="Guage" label="Guage"/>
   </listBox1>
  </td>
 </tr>

 <tr>
  <td>Chart Title</td>
  <td>
   <textField type="string" modelReference="chartTitle" size="30" title="enter a title for this chart"/>
  </td>
 </tr>

 <tr>
  <td>Chart Height</td>
  <td>
   <textField type="posint" modelReference="chartHeight" size="5" title="enter height in pixels - default 300"/>
   &#160;&#160;&#160;Chart Width
   <textField type="posint" modelReference="chartWidth" size="5" title="enter width in pixels - default 500"/>
  </td>
 </tr>
 
